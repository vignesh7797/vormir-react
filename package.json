{
  "name": "@vormir/root",
  "version": "1.0.0",
  "private": true,
  "description": "A modern, customizable React UI library with built-in light/dark mode",
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "tailwind",
    "typescript",
    "dark-mode",
    "accessibility"
  ],
  "author": "Vignesh <vignesh7797@github>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vignesh7797/vormir-react.git"
  },
  "homepage": "https://github.com/vignesh7797/vormir-react#readme",
  "bugs": {
    "url": "https://github.com/vignesh7797/vormir-react/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "turbo clean && rm -rf node_modules",
    "storybook": "pnpm --filter @vormir/storybook storybook",
    "build:storybook": "pnpm --filter @vormir/storybook build-storybook",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
