{
  "name": "@vormir/hooks",
  "version": "1.0.0",
  "description": "A comprehensive collection of React hooks for common patterns and interactions",
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "utilities",
    "typescript"
  ],
  "author": "Vormir UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vignesh7797/vormir-react.git",
    "directory": "packages/hooks"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build && tsc --project tsconfig.build.json",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vormir/eslint-config": "workspace:*",
    "@vormir/tsconfig": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
